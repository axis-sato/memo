    "@fortawesome/react-fontawesome": "^0.1.12",
    "firebase": "^8.0.1",
    "next": "^10.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.11.0",
    "react-infinite-scroll-component": "^5.1.0",
    "react-markdown": "^5.0.2",
    "react-syntax-highlighter": "^15.3.0",
    "react-toastify": "^6.1.0",
    "remark-gfm": "^1.0.0",
    "tailwindcss": "^1.9.6"
  },
  "devDependencies": {
    "@testing-library/react": "^11.1.1",
    "@types/jest": "^26.0.15",
